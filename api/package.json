{
  "name": "guardianchain-api",
  "version": "1.0.0",
  "description": "REST API server for GuardianChain - Connects React frontend to Oasis Sapphire smart contracts",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "lint": "eslint src/",
    "build": "npm run compile-contracts",
    "compile-contracts": "cd ../backend && npm run compile",
    "deploy:testnet": "cd ../backend && npm run deploy:testnet",
    "deploy:localnet": "cd ../backend && npm run localnet-deploy"
  },
  "keywords": [
    "api",
    "rest",
    "express",
    "blockchain",
    "oasis",
    "sapphire",
    "ethereum",
    "web3",
    "guardianchain"
  ],
  "author": "GuardianChain Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "@oasisprotocol/sapphire-paratime": "^1.3.0",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.53.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
